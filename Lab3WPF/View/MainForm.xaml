        xmlns:local="clr-namespace:Lab3WPF.View"
        mc:Ignorable="d"
        Title="MainForm" Height="350" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        
        <!-- HereosListBox-->
        <Label Content="Heroes" Grid.Column="1" Grid.Row="1"/>
        <ListBox x:Name="myListViewOfHeroes" Grid.Column="1" Grid.Row="2" Grid.RowSpan="4" Grid.ColumnSpan="2" Height="220" Margin="0,0,40,0" ItemsSource="{Binding Heroes}" SelectionChanged="myListViewOfHeroes_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label>Name</Label>
                            <Label Content="{Binding SuperName}"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- HeroNames-->
        <ListView Grid.Column="3" Grid.Row="2" BorderThickness="0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ListViewItem BorderThickness="0" >
                        <StackPanel>
                            <Label Content="Hero Name:" HorizontalAlignment="Right"/>
                            <Label Content="Real Name:" HorizontalAlignment="Right"/>
                            <Label Content="Age:" HorizontalAlignment="Right"/>
                            <Label Content="City:" HorizontalAlignment="Right"/>
                        </StackPanel>
                    </ListViewItem>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <!-- HeroesAttributes-->
        <ListBox x:Name="myListViewOfHeroAttributes" Grid.Column="4" Grid.Row="2" Width="100"/>
        <!-- HeroAbilities-->
        <Label Content="Abilities:" Grid.Column="5" Grid.Row="1" Margin="30,0,0,0"/>
        <ListBox x:Name="myListViewOfHeroAbilities" Grid.Column="5" Grid.Row="2" Width="160" Margin="30,0,0,0" ItemsSource="{Binding Abilities}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="{Binding name}"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

